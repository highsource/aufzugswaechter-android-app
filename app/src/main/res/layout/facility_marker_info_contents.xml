<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/facilityEquipmentnumber_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Id: " />
        <TextView
            android:id="@+id/facilityEquipmentnumber_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10036182" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stationName_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Station: " />
        <TextView
            android:id="@+id/stationName_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KÃ¶then" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/facilityDescription_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Facility: " />
        <TextView
            android:id="@+id/facilityDescription_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aufzug zu Bstg 4/5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/facilityType_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Facility type: " />
        <TextView
            android:id="@+id/facilityType_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELEVATOR" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/facilityState_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Facility state: " />
        <TextView
            android:id="@+id/facilityState_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/facilityStateKnownSince_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Facility state known since: " />
        <TextView
            android:id="@+id/facilityStateKnownSince_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01.01.2015" />
    </LinearLayout>

    <Button
        android:id="@+id/toggleFacilitySubscription_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click and hold to subscribe for updates" />

</LinearLayout>